<div class="container pt-5">
<div class= "pt-5">
  <h3>  Чому саме ти повинен отримати це завдання? </h3>
  <div class="card shadow">
            <div class="card-body" style="background: #cccccc;">
<%= form_for @comment do |f| %>
<% if @comment.errors.any? %>
      <% @comment.errors.full_messages.each do |message| %>
      <h4 class="alert-danger"> <%= message %> </h4>
      <% end %>
    <% end %>
<div class="pt-5">

  <%= f.text_area :body, class: 'form-control', rows: "2" %>
</div>
<br>

<%= f.hidden_field :user_id %>
<%= f.hidden_field :task_id %>
<div><%= f.submit 'Опублікувати', :class => 'btn btn-success' %></div>
<% end %>
</div>
</div>
</div>
</div>