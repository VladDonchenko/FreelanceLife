<style>

.aaa{
  font-size:23px;
height: 100%;
opacity: 0.46;
border-radius: 10px;
background: #8E90A6;
outline-width: 0;}
</style>

<div class="pt-5" style="text-align: center">
  </br></br>
<h2 class="pt-5" style="font-size: 95px; color: black;"><strong><span style="color: #000000;">Вхід</span></strong></h2></br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div style="text-decoration: none;">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'aaa' %>
  </div>
  <div class="field">
    <%= f.label :password,"Пароль", :style => 'text-align: left;' %><br/>
    <%= f.password_field :password, autocomplete: "current-password", class: 'aaa' %>
  </div>
<br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Запам'ятати мене" %>
    </div>
  <% end %>

  <div class="actions ">
    <div class="d-grid gap-2 d-md-block" style="">
        <%= f.submit "Вхід" ,class: 'btn btn-success'%>
      </div>
        <br>
    <%= link_to "Авторизація з Google", user_google_oauth2_omniauth_authorize_path, method: :post %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>