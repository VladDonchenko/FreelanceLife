        <!-- Section: Social media -->
         

        <section class="mb-2">
          <!-- Facebook -->
          <div class="row">
            <div class="col-4">
            <a class="navbar-brand" href="/"><strong><span style="color: #FFFFFF;">Study</span><span style="color: #018c4b;">Hub</span></strong></a></br>
            <%= link_to "Зворотній зв'язок", new_contact_path, class: "btn btn-outline-light btn-floating m-1", style: "text-align: left;"%>  
            </div>

            <div class="col-4 text-center p-4">
            <a class="btn btn-outline-light  btn-floating m-1" href="https://www.facebook.com/" role="button"
              ><i class="fab fa-facebook-f"></i
